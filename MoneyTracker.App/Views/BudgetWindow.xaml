<Window x:Class="MoneyTracker.App.Views.BudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MoneyTracker.App.Views"
        Title="💰 Бюджеты" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="💰 БЮДЖЕТЫ" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Контроль расходов по категориям" 
                           FontSize="14" 
                           Foreground="#E3F2FD"/>

                <!-- ОБЩАЯ СТАТИСТИКА -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Общий лимит" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtTotalLimit" Text="0 ₽" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Потрачено" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtTotalSpent" Text="0 ₽" FontSize="18" FontWeight="Bold" Foreground="#F44336"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Осталось" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtTotalRemaining" Text="0 ₽" FontSize="18" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="Категорий" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtBudgetCount" Text="0" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- СПИСОК БЮДЖЕТОВ -->
        <ListView x:Name="lstBudgets" 
                  Grid.Row="1" 
                  Margin="10"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            Margin="0,5" 
                            Padding="15" 
                            CornerRadius="8"
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- ИНФОРМАЦИЯ О БЮДЖЕТЕ -->
                            <StackPanel Grid.Column="0">
                                <!-- КАТЕГОРИЯ -->
                                <TextBlock Text="{Binding Category}" 
                                           FontWeight="Bold" 
                                           FontSize="16"
                                           Margin="0,0,0,5"/>

                                <!-- СТАТУС -->
                                <Border Background="{Binding StatusColor}" 
                                        CornerRadius="10" 
                                        Padding="5,2" 
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Status}" 
                                               FontSize="11" 
                                               FontWeight="Bold" 
                                               Foreground="White"/>
                                </Border>

                                <!-- ПРОГРЕСС (раздельно) -->
                                <StackPanel Margin="0,0,0,8">
                                    <!-- ПОТРАЧЕНО -->
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                        <TextBlock Text="Потрачено:" 
                   Foreground="#666"
                   Width="80"/>
                                        <TextBlock Text="{Binding Spent, StringFormat={}{0:N0} ₽}" 
                   FontWeight="SemiBold"
                   Foreground="#F44336"/>
                                    </StackPanel>

                                    <!-- ОСТАЛОСЬ -->
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Осталось:" 
                   Foreground="#666"
                   Width="80"/>
                                        <TextBlock Text="{Binding Remaining, StringFormat={}{0:N0} ₽}" 
                   FontWeight="SemiBold">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsExceeded}" Value="True">
                                                            <Setter Property="Foreground" Value="#F44336"/>
                                                            <Setter Property="Text">
                                                                <Setter.Value>
                                                                    <MultiBinding StringFormat="−{0:N0} ₽">
                                                                        <Binding Path="Remaining"/>
                                                                    </MultiBinding>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </StackPanel>

                                <!-- ЛИМИТ И ИКОНКА СТАТУСА -->
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <!-- ИКОНКА -->
                                    <TextBlock Margin="0,0,10,0" FontSize="16">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="✅"/>
                                                <Setter Property="Foreground" Value="#4CAF50"/>
                                                <Setter Property="ToolTip" Value="Всё в порядке"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsExceeded}" Value="True">
                                                        <Setter Property="Text" Value="❌"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                        <Setter Property="ToolTip" Value="Превышен лимит"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                                        <Setter Property="Text" Value="⚠️"/>
                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                        <Setter Property="ToolTip" Value="Близко к лимиту"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- ЛИМИТ -->
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Лимит: {0:N0} ₽">
                                                <Binding Path="MonthlyLimit"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="#666"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsExceeded}" Value="True">
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsWarning}" Value="True">
                                                        <Setter Property="Foreground" Value="#FF9800"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </StackPanel>

                            <!-- КНОПКИ ДЕЙСТВИЙ -->
                            <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center"
                                        Margin="20,0,0,0">
                                <Button Content="✏️" 
                                        Width="30"
                                        Height="30"
                                        Background="#2196F3"
                                        Foreground="White"
                                        Tag="{Binding Id}"
                                        Click="BtnEditBudget_Click"
                                        ToolTip="Редактировать бюджет"/>

                                <Button Content="🗑️" 
                                        Width="30"
                                        Height="30"
                                        Background="#F44336"
                                        Foreground="White"
                                        Margin="0,5,0,0"
                                        Tag="{Binding Id}"
                                        Click="BtnDeleteBudget_Click"
                                        ToolTip="Удалить бюджет"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- ПАНЕЛЬ КНОПОК -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                Padding="15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="btnAddBudget"
                        Content="➕ Новый бюджет" 
                        FontWeight="Bold"
                        Padding="15,8"
                        Background="#4CAF50"
                        Foreground="White"
                        Click="BtnAddBudget_Click"/>

                <Button Content="📊 Рекомендации" 
                        Padding="15,8"
                        Margin="10,0,0,0"
                        Click="BtnRecommendations_Click"/>

                <Button Content="✕ Закрыть" 
                        Padding="15,8"
                        Margin="10,0,0,0"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>