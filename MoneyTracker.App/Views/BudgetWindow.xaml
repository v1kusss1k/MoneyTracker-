<Window x:Class="MoneyTracker.App.Views.BudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MoneyTracker.App.Views"
        Title="💰 Бюджеты" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Стиль для прогресс-бара бюджета -->
        <Style x:Key="BudgetProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#4CAF50"/>
            <Setter Property="Background" Value="#EEEEEE"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
        </Style>

        <!-- Стиль для статуса -->
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" Background="#2196F3" Padding="20">
            <StackPanel>
                <TextBlock Text="💰 БЮДЖЕТЫ" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Контроль расходов по категориям" 
                           FontSize="14" 
                           Foreground="#E3F2FD"/>

                <!-- ОБЩАЯ СТАТИСТИКА -->
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="15" 
                        Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="Общий лимит" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtTotalLimit" Text="0 ₽" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="Потрачено" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtTotalSpent" Text="0 ₽" FontSize="18" FontWeight="Bold" Foreground="#F44336"/>
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="Осталось" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtTotalRemaining" Text="0 ₽" FontSize="18" FontWeight="Bold" Foreground="#4CAF50"/>
                        </StackPanel>

                        <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                            <TextBlock Text="Категорий" FontSize="11" Foreground="#666"/>
                            <TextBlock x:Name="txtBudgetCount" Text="0" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </Border>

        <!-- СПИСОК БЮДЖЕТОВ -->
        <ListView x:Name="lstBudgets" 
                  Grid.Row="1" 
                  Margin="10"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            Margin="0,5" 
                            Padding="15" 
                            CornerRadius="8"
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- ИНФОРМАЦИЯ О БЮДЖЕТЕ -->
                            <StackPanel Grid.Column="0">
                                <!-- КАТЕГОРИЯ И СТАТУС -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <TextBlock Text="{Binding Category}" 
                                               FontWeight="Bold" 
                                               FontSize="16"/>

                                    <Border Background="{Binding StatusColor}" 
                                            CornerRadius="10" 
                                            Padding="5,2" 
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status}" 
                                                   FontSize="11" 
                                                   FontWeight="Bold" 
                                                   Foreground="White"/>
                                    </Border>
                                </StackPanel>

                                <!-- ПРОГРЕСС-БАР -->
                                <Grid Margin="0,0,0,8">
                                    <Border Background="#EEEEEE" Height="12" CornerRadius="6"/>
                                    <Border Background="{Binding ProgressColor}" 
                                            Height="12" 
                                            CornerRadius="6"
                                            HorizontalAlignment="Left"
                                            Width="{Binding ProgressBarWidth, StringFormat={}{0}%}"/>

                                    <!-- ТЕКСТ ПРОГРЕССА -->
                                    <TextBlock Text="{Binding ProgressText}" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontSize="9"
                                               FontWeight="Bold"
                                               Foreground="White"/>
                                </Grid>

                                <!-- ЦИФРЫ -->
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Лимит" FontSize="11" Foreground="#666"/>
                                        <TextBlock Text="{Binding MonthlyLimit, StringFormat={}{0:N0} ₽}" 
                                                   FontWeight="SemiBold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Потрачено" FontSize="11" Foreground="#666"/>
                                        <TextBlock Text="{Binding Spent, StringFormat={}{0:N0} ₽}" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#F44336"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Осталось" FontSize="11" Foreground="#666"/>
                                        <TextBlock Text="{Binding Remaining, StringFormat={}{0:N0} ₽}" 
                                                   FontWeight="SemiBold"
                                                   Foreground="#4CAF50"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- КНОПКИ ДЕЙСТВИЙ -->
                            <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center"
                                        Margin="20,0,0,0">
                                <Button Content="✏️" 
                                        Width="30"
                                        Height="30"
                                        Background="#2196F3"
                                        Foreground="White"
                                        Tag="{Binding Id}"
                                        Click="BtnEditBudget_Click"
                                        ToolTip="Редактировать бюджет"/>

                                <Button Content="🗑️" 
                                        Width="30"
                                        Height="30"
                                        Background="#F44336"
                                        Foreground="White"
                                        Margin="0,5,0,0"
                                        Tag="{Binding Id}"
                                        Click="BtnDeleteBudget_Click"
                                        ToolTip="Удалить бюджет"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- ПАНЕЛЬ КНОПОК -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                Padding="15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="btnAddBudget"
                        Content="➕ Новый бюджет" 
                        FontWeight="Bold"
                        Padding="15,8"
                        Background="#4CAF50"
                        Foreground="White"
                        Click="BtnAddBudget_Click"/>

                <Button Content="📊 Рекомендации" 
                        Padding="15,8"
                        Margin="10,0,0,0"
                        Click="BtnRecommendations_Click"/>

                <Button Content="✕ Закрыть" 
                        Padding="15,8"
                        Margin="10,0,0,0"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>