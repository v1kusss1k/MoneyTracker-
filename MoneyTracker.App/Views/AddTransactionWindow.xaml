<Window x:Class="MoneyTracker.App.Views.AddTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить операцию" 
        Height="400" 
        Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Добавить операцию" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0 0 0 15"/>

            <!-- ТИП -->
            <TextBlock Text="Тип операции:"/>
            <ComboBox x:Name="cmbTransactionType" SelectedIndex="0">
                <ComboBoxItem Content="Доход"/>
                <ComboBoxItem Content="Расход"/>
            </ComboBox>

            <!-- СУММА -->
            <TextBlock Text="Сумма (₽):" Margin="0 10 0 0"/>
            <TextBox x:Name="txtAmount" Text="0"/>

            <!-- КАТЕГОРИЯ -->
            <TextBlock Text="Категория:" Margin="0 10 0 0"/>
            <ComboBox x:Name="cmbCategory" SelectedIndex="0">
                <!-- ДОХОДЫ -->
                <ComboBoxItem Content="Зарплата"/>
                <ComboBoxItem Content="Стипендия"/>
                <ComboBoxItem Content="Фриланс"/>
                <ComboBoxItem Content="Инвестиции"/>
                <ComboBoxItem Content="Подарок"/>
                <ComboBoxItem Content="Премия"/>
                <ComboBoxItem Content="Другое"/>

                <!-- РАСХОДЫ -->
                <ComboBoxItem Content="Продукты"/>
                <ComboBoxItem Content="Транспорт"/>
                <ComboBoxItem Content="Коммуналка"/>
                <ComboBoxItem Content="Кафе/рестораны"/>
                <ComboBoxItem Content="Одежда"/>
                <ComboBoxItem Content="Здоровье"/>
                <ComboBoxItem Content="Развлечения"/>
                <ComboBoxItem Content="Образование"/>
                <ComboBoxItem Content="Путешествия"/>
                <ComboBoxItem Content="Техника"/>
                <ComboBoxItem Content="Красота"/>
                <ComboBoxItem Content="Спорт"/>
                <ComboBoxItem Content="Подписки"/>
            </ComboBox>

            <!-- ОПИСАНИЕ -->
            <TextBlock Text="Описание:" Margin="0 10 0 0"/>
            <TextBox x:Name="txtDescription" Height="60" TextWrapping="Wrap"/>

            <!-- КНОПКИ -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0 20 0 0">
                <Button Content="Отмена" 
                        Width="80" 
                        Margin="0 0 10 0"
                        Click="BtnCancel_Click"/>
                <Button Content="Сохранить" 
                        Width="80" 
                        Background="#4CAF50" 
                        Foreground="White"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>