<Window x:Class="MoneyTracker.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚙ Настройки" 
        Height="400" 
        Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="⚙ НАСТРОЙКИ" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0 0 0 20"/>

            <!-- УВЕДОМЛЕНИЯ -->
            <Border Background="#FFF3E0" 
                    Padding="15" 
                    CornerRadius="5" 
                    Margin="0 0 0 15">
                <StackPanel>
                    <TextBlock Text="🔔 Уведомления" 
                               FontWeight="Bold" 
                               Margin="0 0 0 10"/>

                    <CheckBox x:Name="chkBudgetAlerts" 
                              Content="Уведомления о бюджетах"
                              IsChecked="True"
                              Margin="0 5"/>

                    <CheckBox x:Name="chkGoalReminders" 
                              Content="Напоминания о целях"
                              IsChecked="True"
                              Margin="0 5"/>

                    <CheckBox x:Name="chkRecurringReminders" 
                              Content="Напоминания о регулярных платежах"
                              IsChecked="True"
                              Margin="0 5"/>

                    <CheckBox x:Name="chkLargeExpenseAlerts" 
                              Content="Уведомления о крупных расходах"
                              IsChecked="True"
                              Margin="0 10 0 0"/>

                    <StackPanel Orientation="Horizontal" Margin="5 10 0 0">
                        <TextBlock Text="Порог крупного расхода:" 
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="txtExpenseThreshold" 
                                 Text="10000"
                                 Width="80"
                                 Margin="10 0 5 0"/>
                        <TextBlock Text="₽" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- ОБЩИЕ НАСТРОЙКИ -->
            <Border Background="#E8F5E8" 
                    Padding="15" 
                    CornerRadius="5" 
                    Margin="0 0 0 15">
                <StackPanel>
                    <TextBlock Text="📊 Общие" 
                               FontWeight="Bold" 
                               Margin="0 0 0 10"/>

                    <CheckBox x:Name="chkAutoSave" 
                              Content="Автосохранение"
                              IsChecked="True"
                              Margin="0 5"/>

                    <CheckBox x:Name="chkStartMinimized" 
                              Content="Запуск свернутым"
                              Margin="0 5"/>

                    <CheckBox x:Name="chkShowWelcome" 
                              Content="Показывать приветствие"
                              IsChecked="True"
                              Margin="0 5"/>
                </StackPanel>
            </Border>

            <!-- ВНЕШНИЙ ВИД -->
            <Border Background="#E3F2FD" 
                    Padding="15" 
                    CornerRadius="5" 
                    Margin="0 0 0 20">
                <StackPanel>
                    <TextBlock Text="🎨 Внешний вид" 
                               FontWeight="Bold" 
                               Margin="0 0 0 10"/>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Тема:" 
                                   VerticalAlignment="Center"
                                   Width="60"/>
                        <ComboBox x:Name="cmbTheme" 
                                  Width="150"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Светлая" Tag="light"/>
                            <ComboBoxItem Content="Темная" Tag="dark"/>
                        </ComboBox>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- КНОПКИ -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="Сброс" 
                        Width="80" 
                        Margin="0 0 10 0"
                        Click="BtnReset_Click"/>

                <Button Content="Отмена" 
                        Width="80" 
                        Margin="0 0 10 0"
                        Click="BtnCancel_Click"/>

                <Button Content="Сохранить" 
                        Width="80" 
                        Background="#4CAF50" 
                        Foreground="White"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>