<Window x:Class="MoneyTracker.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки" 
        Height="257" 
        Width="400"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="⚙ Настройки приложения" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0 0 0 20"/>

            <!-- ПРОСТЫЕ НАСТРОЙКИ -->
            <StackPanel>
                <CheckBox x:Name="chkAutoSave" 
                          Content="Автоматически сохранять данные"
                          IsChecked="True"
                          Margin="0 5"/>

                <CheckBox x:Name="chkShowBalance" 
                          Content="Показывать баланс в уведомлениях"
                          IsChecked="True"
                          Margin="0 5"/>

            </StackPanel>

            <!-- КНОПКИ -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0 70 0 0">
                <Button Content="Отмена" 
                        Width="80" 
                        Margin="0 0 10 0"
                        Click="BtnCancel_Click"/>
                <Button Content="Сохранить" 
                        Width="80" 
                        Background="#4CAF50" 
                        Foreground="White"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>