<Window x:Class="MoneyTracker.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="⚙ Настройки" 
        Height="226" 
        Width="322"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="⚙ Настройки приложения" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0 0 0 20"/>

            <StackPanel>
                <CheckBox x:Name="chkAutoSave" Content="Автосохранение" IsChecked="True" Margin="0 5"/>
                <CheckBox x:Name="chkShowNotifications" Content="Показывать уведомления" IsChecked="False" Margin="0 5"/>
                <CheckBox x:Name="chkDarkMode" Content="Тёмная тема" Margin="0 5"/>
            </StackPanel>

            <Button Content="Сохранить" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0"
                    Padding="10 5"
                    Width="100"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>