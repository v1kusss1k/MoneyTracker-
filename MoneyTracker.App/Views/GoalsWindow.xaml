<Window x:Class="MoneyTracker.App.Views.GoalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🎯 Мои цели" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" Background="#FF9800" Padding="20">
            <StackPanel>
                <TextBlock Text="🎯 МОИ ЦЕЛИ" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Управление целями накопления" 
                           FontSize="14" 
                           Foreground="#FFF3E0"/>
            </StackPanel>
        </Border>

        <!-- СПИСОК ЦЕЛЕЙ -->
        <ListView x:Name="goalsListView" 
                  Grid.Row="1" 
                  Margin="10"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" 
                            Margin="0,5" 
                            Padding="15" 
                            CornerRadius="8"
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- ИКОНКА ЦЕЛИ -->
                            <TextBlock Grid.Column="0" 
                                       Text="{Binding Icon}" 
                                       FontSize="28"
                                       Margin="0,0,15,0"/>

                            <!-- ИНФОРМАЦИЯ О ЦЕЛИ -->
                            <StackPanel Grid.Column="1">
                                <!-- НАЗВАНИЕ -->
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           FontSize="16"/>

                                <!-- ОПИСАНИЕ (если есть) -->
                                <TextBlock Text="{Binding Description}" 
                                           Foreground="#666" 
                                           Margin="0,5,0,10"
                                           TextWrapping="Wrap"
                                           FontSize="13"/>

                                <!-- ПРОГРЕСС (ТЕКСТОМ) -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <!-- ИКОНКА СТАТУСА -->
                                    <TextBlock Margin="0,0,8,0"
                                               FontSize="16">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="⏳"/>
                                                <Setter Property="Foreground" Value="#FF9800"/>
                                                <Setter Property="ToolTip" Value="Цель в процессе"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="Text" Value="✅"/>
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                        <Setter Property="ToolTip" Value="Цель достигнута"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- ПРОГРЕСС ТЕКСТОМ -->
                                    <TextBlock Text="{Binding ProgressText}" 
                                               FontWeight="SemiBold"
                                               Foreground="Black"/>

                                    <TextBlock Text=" • " 
                                               Foreground="#999" 
                                               Margin="5,0"/>

                                    <!-- ОСТАЛОСЬ ДНЕЙ -->
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text">
                                                    <Setter.Value>
                                                        <MultiBinding StringFormat="Осталось {0} дней">
                                                            <Binding Path="DaysRemaining"/>
                                                        </MultiBinding>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Foreground" Value="#666"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="0">
                                                        <Setter Property="Text" Value="Срок сегодня"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="-1">
                                                        <Setter Property="Text" Value="Просрочено на 1 день"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="-2">
                                                        <Setter Property="Text" Value="Просрочено на 2 дня"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="-3">
                                                        <Setter Property="Text" Value="Просрочено на 3 дня"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="-4">
                                                        <Setter Property="Text" Value="Просрочено на 4 дня"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="-5">
                                                        <Setter Property="Text" Value="Просрочено на 5 дней"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="-6">
                                                        <Setter Property="Text" Value="Просрочено на 6 дней"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="-7">
                                                        <Setter Property="Text" Value="Просрочено на неделю"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DaysRemaining}" Value="-8">
                                                        <Setter Property="Text" Value="Просрочено более недели"/>
                                                        <Setter Property="Foreground" Value="#F44336"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <TextBlock Text=" • " 
                                               Foreground="#999" 
                                               Margin="5,0"/>

                                    <!-- ДАТА -->
                                    <TextBlock Text="{Binding TargetDate, StringFormat='До {0:dd.MM.yyyy}'}" 
                                               Foreground="#666"/>
                                </StackPanel>

                                <!-- ДОПОЛНИТЕЛЬНАЯ ИНФОРМАЦИЯ -->
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="{Binding CurrentAmount, StringFormat='Накоплено: {0:N0}₽'}" 
                                               Foreground="#4CAF50"
                                               FontWeight="SemiBold"/>

                                    <TextBlock Text=" • " 
                                               Foreground="#999" 
                                               Margin="5,0"/>

                                    <TextBlock Text="{Binding RemainingAmount, StringFormat='Осталось: {0:N0}₽'}" 
                                               Foreground="#F44336"
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- КНОПКИ ДЕЙСТВИЙ -->
                            <StackPanel Grid.Column="2" 
                                        VerticalAlignment="Center">
                                <Button Content="➕ Добавить" 
                                        Background="#4CAF50"
                                        Foreground="White"
                                        Tag="{Binding Id}"
                                        Click="BtnAddMoney_Click"
                                        ToolTip="Пополнить цель"/>

                                <Button Content="✕ Удалить" 
                                        Background="#F44336"
                                        Foreground="White"
                                        Margin="0,5,0,0"
                                        Tag="{Binding Id}"
                                        Click="BtnDeleteGoal_Click"
                                        ToolTip="Удалить цель"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>

            <!-- СТИЛЬ ПУСТОГО СПИСКА -->
            <ListView.Style>
                <Style TargetType="ListView">
                    <Setter Property="Background" Value="White"/>
                </Style>
            </ListView.Style>
        </ListView>

        <!-- СООБЩЕНИЕ ДЛЯ ПУСТОГО СПИСКА -->
        <Grid Grid.Row="1" Margin="10" Background="#FAFAFA">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Items.Count, ElementName=goalsListView}" Value="0">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🎯" 
                           FontSize="48"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                <TextBlock Text="У вас пока нет целей" 
                           FontSize="16"
                           Foreground="#666"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Создайте первую цель для накопления" 
                           FontSize="13"
                           Foreground="#999"
                           HorizontalAlignment="Center"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Grid>

        <!-- ПАНЕЛЬ КНОПОК -->
        <Border Grid.Row="2" 
                Background="#F5F5F5" 
                Padding="15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <Button x:Name="btnAddGoal"
                        Content="🎯 Новая цель" 
                        FontWeight="Bold"
                        Padding="15,8"
                        Background="#FF9800"
                        Foreground="White"
                        Click="BtnAddGoal_Click"/>

                <Button Content="✕ Закрыть" 
                        Padding="15,8"
                        Margin="10,0,0,0"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>