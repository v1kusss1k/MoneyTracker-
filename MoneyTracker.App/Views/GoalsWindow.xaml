<Window x:Class="MoneyTracker.App.Views.GoalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🎯 Цели накопления" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" Background="#FF9800" Padding="20">
            <StackPanel>
                <TextBlock Text="🎯 ЦЕЛИ НАКОПЛЕНИЯ" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Здесь вы можете планировать свои финансовые цели" 
                           FontSize="14" 
                           Foreground="#FFF3E0"/>
            </StackPanel>
        </Border>

        <!-- ОСНОВНОЕ СОДЕРЖИМОЕ -->
        <Border Grid.Row="1" Padding="30">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- КНОПКА ДОБАВЛЕНИЯ (ПРОСТАЯ) -->
                <Button Content="➕ Добавить новую цель" 
                        Margin="0 30 0 0"
                        Padding="15 8"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="BtnAddGoal_Click"/>
            </StackPanel>
        </Border>

        <!-- ПОДВАЛ -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Закрыть" 
                        Padding="10 5"
                        Width="100"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>