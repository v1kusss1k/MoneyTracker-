<Window x:Class="MoneyTracker.App.Views.GoalsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="🎯 Цели накопления" 
        Height="500" 
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <!-- В шапке добавьте: -->
        <Border Grid.Row="0" Background="#FF9800" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🎯 ЦЕЛИ НАКОПЛЕНИЯ" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
                    <TextBlock Text="Планируйте и отслеживайте свои финансовые цели" 
                       FontSize="14" 
                       Foreground="#FFF3E0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                Content="✕" 
                Foreground="White" 
                Background="Transparent"
                BorderThickness="0"
                FontSize="18"
                Width="30"
                Height="30"
                Click="BtnClose_Click"/>
            </Grid>
        </Border>

        <!-- ОСНОВНОЕ СОДЕРЖИМОЕ -->
        <ScrollViewer Grid.Row="1" Margin="20">
            <StackPanel>
                <!-- ПРИМЕР ЦЕЛИ 1 -->
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="8" 
                        Margin="0 0 0 15" 
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🚗 Новая машина" 
                                           FontSize="18" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="В процессе" 
                                           Margin="10 0 0 0" 
                                           Foreground="#FF9800"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <TextBlock Text="Накопить на новый автомобиль" 
                                       Foreground="#666" 
                                       Margin="0 5 0 15"
                                       TextWrapping="Wrap"/>

                            <!-- ПРОГРЕСС БАР -->
                            <Border Height="20" Background="#E0E0E0" CornerRadius="10">
                                <Border Width="150" 
                                        Background="#4CAF50" 
                                        CornerRadius="10">
                                    <TextBlock Text="30% (150,000₽ из 500,000₽)" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Foreground="White" 
                                               FontSize="10"/>
                                </Border>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                <TextBlock Text="Цель:" Foreground="#666"/>
                                <TextBlock Text="500,000 ₽" FontWeight="Bold" Margin="5 0 20 0"/>

                                <TextBlock Text="Накоплено:" Foreground="#666"/>
                                <TextBlock Text="150,000 ₽" FontWeight="Bold" Margin="5 0 20 0"/>

                                <TextBlock Text="Осталось:" Foreground="#666"/>
                                <TextBlock Text="350,000 ₽" FontWeight="Bold" Margin="5 0 20 0"/>
                            </StackPanel>

                            <TextBlock Text="Срок: 31.12.2024 (осталось 300 дней)" 
                                       Margin="0 5 0 0" 
                                       Foreground="#666"/>
                        </StackPanel>

                        <!-- ПРОГРЕСС В ПРОЦЕНТАХ -->
                        <Border Grid.Column="1" 
                                Background="#F5F5F5" 
                                CornerRadius="5" 
                                Margin="20 0 0 0" 
                                Padding="15">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Прогресс" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="30%" 
                                           FontSize="28" 
                                           FontWeight="Bold" 
                                           Foreground="#4CAF50"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- ПРИМЕР ЦЕЛИ 2 -->
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="8" 
                        Margin="0 0 0 15" 
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏝️ Отпуск на море" 
                                           FontSize="18" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="В процессе" 
                                           Margin="10 0 0 0" 
                                           Foreground="#FF9800"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <TextBlock Text="Поездка на Бали на 2 недели" 
                                       Foreground="#666" 
                                       Margin="0 5 0 15"
                                       TextWrapping="Wrap"/>

                            <!-- ПРОГРЕСС БАР -->
                            <Border Height="20" Background="#E0E0E0" CornerRadius="10">
                                <Border Width="100" 
                                        Background="#4CAF50" 
                                        CornerRadius="10">
                                    <TextBlock Text="50% (75,000₽ из 150,000₽)" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Foreground="White" 
                                               FontSize="10"/>
                                </Border>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                <TextBlock Text="Цель:" Foreground="#666"/>
                                <TextBlock Text="150,000 ₽" FontWeight="Bold" Margin="5 0 20 0"/>

                                <TextBlock Text="Накоплено:" Foreground="#666"/>
                                <TextBlock Text="75,000 ₽" FontWeight="Bold" Margin="5 0 20 0"/>

                                <TextBlock Text="Осталось:" Foreground="#666"/>
                                <TextBlock Text="75,000 ₽" FontWeight="Bold" Margin="5 0 20 0"/>
                            </StackPanel>

                            <TextBlock Text="Срок: 01.07.2024 (осталось 150 дней)" 
                                       Margin="0 5 0 0" 
                                       Foreground="#666"/>
                        </StackPanel>

                        <!-- ПРОГРЕСС В ПРОЦЕНТАХ -->
                        <Border Grid.Column="1" 
                                Background="#F5F5F5" 
                                CornerRadius="5" 
                                Margin="20 0 0 0" 
                                Padding="15">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Прогресс" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="50%" 
                                           FontSize="28" 
                                           FontWeight="Bold" 
                                           Foreground="#4CAF50"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- ПРИМЕР ЦЕЛИ 3 (ЗАВЕРШЕННАЯ) -->
                <Border Background="White" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1"
                        CornerRadius="8" 
                        Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💻 Новый ноутбук" 
                                           FontSize="18" 
                                           FontWeight="Bold"/>
                                <TextBlock Text="✅ Завершено" 
                                           Margin="10 0 0 0" 
                                           Foreground="#4CAF50"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <TextBlock Text="Мощный ноутбук для работы и игр" 
                                       Foreground="#666" 
                                       Margin="0 5 0 15"
                                       TextWrapping="Wrap"/>

                            <!-- ПРОГРЕСС БАР (ПОЛНЫЙ) -->
                            <Border Height="20" Background="#E0E0E0" CornerRadius="10">
                                <Border Width="200" 
                                        Background="#4CAF50" 
                                        CornerRadius="10">
                                    <TextBlock Text="100% (80,000₽ из 80,000₽)" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               Foreground="White" 
                                               FontSize="10"/>
                                </Border>
                            </Border>

                            <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                                <TextBlock Text="Цель:" Foreground="#666"/>
                                <TextBlock Text="80,000 ₽" FontWeight="Bold" Margin="5 0 20 0"/>

                                <TextBlock Text="Накоплено:" Foreground="#666"/>
                                <TextBlock Text="80,000 ₽" FontWeight="Bold" Margin="5 0 20 0"/>

                                <TextBlock Text="Осталось:" Foreground="#666"/>
                                <TextBlock Text="0 ₽" FontWeight="Bold" Margin="5 0 20 0"/>
                            </StackPanel>

                            <TextBlock Text="Завершено: 15.12.2023" 
                                       Margin="0 5 0 0" 
                                       Foreground="#4CAF50"/>
                        </StackPanel>

                        <!-- ПРОГРЕСС В ПРОЦЕНТАХ -->
                        <Border Grid.Column="1" 
                                Background="#F5F5F5" 
                                CornerRadius="5" 
                                Margin="20 0 0 0" 
                                Padding="15">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="Прогресс" FontSize="12" Foreground="#666"/>
                                <TextBlock Text="100%" 
                                           FontSize="28" 
                                           FontWeight="Bold" 
                                           Foreground="#4CAF50"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- ПОДВАЛ -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15">
            <StackPanel>
                <TextBlock Text="💡 Совет: Разбивайте большие цели на маленькие этапы. Откладывайте 10-20% от каждого дохода." 
                          Foreground="#666" 
                          TextWrapping="Wrap"
                          TextAlignment="Center"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="➕ Добавить цель" 
            Background="#4CAF50" 
            Foreground="White"
            Padding="10 5"
            Margin="0 0 10 0"
            Click="BtnAddGoal_Click"/>

                <Button Content="✏️ Редактировать" 
            Background="#2196F3" 
            Foreground="White"
            Padding="10 5"
            Margin="0 0 10 0"
            Click="BtnEditGoal_Click"/>

                <Button Content="Закрыть" 
            Background="#F44336" 
            Foreground="White"
            Padding="10 5"
            Click="BtnClose_Click"/>
            </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>