<Window x:Class="MoneyTracker.App.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📊 Финансовые отчеты" 
        Height="650" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ШАПКА -->
        <Border Grid.Row="0" Background="#9C27B0" Padding="20">
            <StackPanel>
                <TextBlock Text="📊 ФИНАНСОВЫЕ ОТЧЕТЫ" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"/>
                <TextBlock Text="Анализ ваших финансов" 
                           FontSize="14" 
                           Foreground="#F3E5F5"/>
            </StackPanel>
        </Border>

        <!-- ВКЛАДКИ -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- ОБЩАЯ СТАТИСТИКА -->
            <TabItem Header="📈 Общая статистика">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <!-- ФИЛЬТРЫ -->
                        <Border Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Период отчета" FontWeight="Bold" Margin="0,0,0,10"/>

                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Месяц:" Width="80" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbMonth" Width="150" Margin="0,0,20,0"
                                              SelectionChanged="Filter_SelectionChanged">
                                        <ComboBoxItem Content="Текущий месяц" IsSelected="True"/>
                                        <ComboBoxItem Content="Январь"/>
                                        <ComboBoxItem Content="Февраль"/>
                                        <ComboBoxItem Content="Март"/>
                                        <ComboBoxItem Content="Апрель"/>
                                        <ComboBoxItem Content="Май"/>
                                        <ComboBoxItem Content="Июнь"/>
                                        <ComboBoxItem Content="Июль"/>
                                        <ComboBoxItem Content="Август"/>
                                        <ComboBoxItem Content="Сентябрь"/>
                                        <ComboBoxItem Content="Октябрь"/>
                                        <ComboBoxItem Content="Ноябрь"/>
                                        <ComboBoxItem Content="Декабрь"/>
                                    </ComboBox>

                                    <TextBlock Text="Год:" Width="50" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="cmbYear" Width="100"
                                              SelectionChanged="Filter_SelectionChanged">
                                        <!-- Годы будут заполняться в коде -->
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- ОСНОВНЫЕ ПОКАЗАТЕЛИ -->
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- ДОХОДЫ -->
                            <Border Grid.Column="0" 
                                    Background="#E8F5E8" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="📈 Доходы" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock x:Name="txtTotalIncome" 
                                               Text="0 ₽" 
                                               FontSize="20" 
                                               FontWeight="Bold"
                                               Foreground="#4CAF50"/>
                                </StackPanel>
                            </Border>

                            <!-- РАСХОДЫ -->
                            <Border Grid.Column="1" 
                                    Background="#FFEBEE" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="📉 Расходы" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock x:Name="txtTotalExpense" 
                                               Text="0 ₽" 
                                               FontSize="20" 
                                               FontWeight="Bold"
                                               Foreground="#F44336"/>
                                </StackPanel>
                            </Border>

                            <!-- БАЛАНС -->
                            <Border Grid.Column="2" 
                                    Background="#E3F2FD" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="💰 Баланс" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock x:Name="txtCurrentBalance" 
                                               Text="0 ₽" 
                                               FontSize="20" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>

                            <!-- ОПЕРАЦИЙ -->
                            <Border Grid.Column="3" 
                                    Background="#FFF3E0" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="📋 Операций" 
                                               FontSize="12" 
                                               Foreground="#666"/>
                                    <TextBlock x:Name="txtTotalTransactions" 
                                               Text="0" 
                                               FontSize="20" 
                                               FontWeight="Bold"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- СТАТИСТИКА ПО КАТЕГОРИЯМ -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- РАСХОДЫ ПО КАТЕГОРИЯМ -->
                            <Border Grid.Column="0" 
                                    Background="White" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="💸 Топ-5 расходов" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,10"/>
                                    <ListView x:Name="lstExpenseCategories" 
                                              Height="200"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="10,5" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="{Binding Category}" 
                                                                   VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:N0}₽}" 
                                                                       FontWeight="Bold"
                                                                       Foreground="#F44336"
                                                                       Margin="0,0,10,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </Border>

                            <!-- ДОХОДЫ ПО КАТЕГОРИЯМ -->
                            <Border Grid.Column="1" 
                                    Background="White" 
                                    CornerRadius="8" 
                                    Padding="15"
                                    Margin="5">
                                <StackPanel>
                                    <TextBlock Text="💰 Топ-5 доходов" 
                                               FontWeight="Bold" 
                                               Margin="0,0,0,10"/>
                                    <ListView x:Name="lstIncomeCategories" 
                                              Height="200"
                                              ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Padding="10,5" BorderBrush="#EEE" BorderThickness="0,0,0,1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                                                                   Text="{Binding Category}" 
                                                                   VerticalAlignment="Center"/>

                                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                            <TextBlock Text="{Binding TotalAmount, StringFormat={}{0:N0}₽}" 
                                                                       FontWeight="Bold"
                                                                       Foreground="#4CAF50"
                                                                       Margin="0,0,10,0"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- БЮДЖЕТЫ -->
            <TabItem Header="💰 Бюджеты">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="📊 Статус бюджетов" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,20"/>

                        <ListView x:Name="lstBudgetReports" 
                                  Height="300"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            Margin="0,5" 
                                            Padding="15" 
                                            CornerRadius="8"
                                            BorderBrush="#E0E0E0" 
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ИНФОРМАЦИЯ -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Category}" 
                                                           FontWeight="Bold" 
                                                           FontSize="16"/>

                                                <!-- ПРОГРЕСС (ТОЛЬКО ТЕКСТ, БЕЗ ПОЛЗУНКА) -->
                                                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                                                    <TextBlock Text="{Binding Spent, StringFormat={}{0:N0}₽}" 
                                                               FontWeight="SemiBold"
                                                               Foreground="#F44336"/>
                                                    <TextBlock Text=" из " 
                                                               Foreground="#666"/>
                                                    <TextBlock Text="{Binding MonthlyLimit, StringFormat={}{0:N0}₽}" 
                                                               FontWeight="SemiBold"
                                                               Foreground="#666"/>
                                                </StackPanel>

                                                <!-- ПРОСТОЙ СТАТУС ТЕКСТОМ -->
                                                <TextBlock Margin="0,5,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Text" 
                                                                    Value="{Binding Status}"/>
                                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                                            <Setter Property="Foreground" Value="#4CAF50"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Превышен">
                                                                    <Setter Property="Foreground" Value="#F44336"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Близко к лимиту">
                                                                    <Setter Property="Foreground" Value="#FF9800"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- ИКОНКА СТАТУСА -->
                                            <TextBlock Grid.Column="1" 
                                                       FontSize="24"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="✅"/>
                                                        <Setter Property="Foreground" Value="#4CAF50"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Превышен">
                                                                <Setter Property="Text" Value="❌"/>
                                                                <Setter Property="Foreground" Value="#F44336"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Близко к лимиту">
                                                                <Setter Property="Text" Value="⚠️"/>
                                                                <Setter Property="Foreground" Value="#FF9800"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- СТАТИСТИКА БЮДЖЕТОВ -->
                        <Border Background="#F5F5F5" Padding="15" CornerRadius="5" Margin="0,20,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                    <TextBlock Text="Общий лимит" FontSize="11" Foreground="#666"/>
                                    <TextBlock x:Name="txtBudgetTotalLimit" Text="0 ₽" FontSize="16" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                    <TextBlock Text="Потрачено" FontSize="11" Foreground="#666"/>
                                    <TextBlock x:Name="txtBudgetTotalSpent" Text="0 ₽" FontSize="16" FontWeight="Bold" Foreground="#F44336"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                    <TextBlock Text="Осталось" FontSize="11" Foreground="#666"/>
                                    <TextBlock x:Name="txtBudgetTotalRemaining" Text="0 ₽" FontSize="16" FontWeight="Bold" Foreground="#4CAF50"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- ЦЕЛИ -->
            <TabItem Header="🎯 Цели">
                <ScrollViewer>
                    <StackPanel Margin="20">
                        <TextBlock Text="📊 Прогресс целей" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,20"/>

                        <ListView x:Name="lstGoalReports" 
                                  Height="350"
                                  ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            Margin="0,5" 
                                            Padding="15" 
                                            CornerRadius="8"
                                            BorderBrush="#E0E0E0" 
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ИНФОРМАЦИЯ -->
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding GoalName}" 
                                                           FontWeight="Bold" 
                                                           FontSize="16"/>

                                                <!-- ПРОГРЕСС ТЕКСТОМ -->
                                                <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                                                    <TextBlock Text="{Binding CurrentAmount, StringFormat={}{0:N0}₽}" 
                                                               FontWeight="SemiBold"
                                                               Foreground="#4CAF50"/>
                                                    <TextBlock Text=" из " 
                                                               Foreground="#666"/>
                                                    <TextBlock Text="{Binding TargetAmount, StringFormat={}{0:N0}₽}" 
                                                               FontWeight="SemiBold"
                                                               Foreground="#666"/>
                                                    <TextBlock Text=" ({Binding ProgressPercentage, StringFormat={}{0:F0}%)" 
                                                               Foreground="#666"
                                                               Margin="5,0,0,0"/>
                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                    <TextBlock Text="{Binding DaysRemaining, StringFormat={}Осталось дней: {0}}" 
                                                               Foreground="#666"/>
                                                    <TextBlock Text=" • " 
                                                               Foreground="#999" 
                                                               Margin="5,0"/>
                                                    <TextBlock Text="{Binding Status}" 
                                                               FontWeight="SemiBold"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>