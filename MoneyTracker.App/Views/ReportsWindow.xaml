<Window x:Class="MoneyTracker.App.Views.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📊 Отчёты" 
        Height="310" 
        Width="500"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="📊 Финансовые отчёты" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0 0 0 20"/>

            <Border Background="#F5F5F5" Padding="15" CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="Общая статистика" FontWeight="Bold" Margin="0 0 0 10"/>

                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Всего операций:" Width="150"/>
                        <TextBlock x:Name="txtTotalTransactions" Text="0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Общий доход:" Width="150"/>
                        <TextBlock x:Name="txtTotalIncome" Text="0 ₽" Foreground="#4CAF50"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Общий расход:" Width="150"/>
                        <TextBlock x:Name="txtTotalExpense" Text="0 ₽" Foreground="#F44336"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 5">
                        <TextBlock Text="Текущий баланс:" Width="150"/>
                        <TextBlock x:Name="txtCurrentBalance" Text="0 ₽" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Button Content="Закрыть" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0"
                    Padding="10 5"
                    Width="100"
                    Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>