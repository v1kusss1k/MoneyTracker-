<Window x:Class="MoneyTracker.App.Views.AddEditBudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новый бюджет" 
        Height="350" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="НОВЫЙ БЮДЖЕТ" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Margin="0 0 0 20"/>

            <!-- КАТЕГОРИЯ - ПУСТАЯ -->
            <TextBlock Text="Категория расходов:"/>
            <ComboBox x:Name="cmbCategory" 
                      IsEditable="True">
                <ComboBoxItem>Продукты</ComboBoxItem>
                <ComboBoxItem>Транспорт</ComboBoxItem>
                <ComboBoxItem>Кафе и рестораны</ComboBoxItem>
                <ComboBoxItem>Коммуналка</ComboBoxItem>
                <ComboBoxItem>Одежда</ComboBoxItem>
                <ComboBoxItem>Развлечения</ComboBoxItem>
                <ComboBoxItem>Здоровье</ComboBoxItem>
                <ComboBoxItem>Образование</ComboBoxItem>
                <ComboBoxItem>Подарки</ComboBoxItem>
                <ComboBoxItem>Другое</ComboBoxItem>
            </ComboBox>

            <!-- ЛИМИТ - ПУСТОЙ -->
            <TextBlock Text="Лимит на месяц (₽):" Margin="0 10 0 0"/>
            <TextBox x:Name="txtLimit"/>

            <!-- МЕСЯЦ - ТЕКУЩИЙ (это ок) -->
            <TextBlock Text="На какой месяц:" Margin="0 10 0 0"/>
            <DatePicker x:Name="dpMonth"/>

            <!-- КНОПКИ -->
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0 20 0 0">
                <Button Content="Отмена" 
                        Width="80"
                        Background="Red"
                        Foreground="White"
                        Margin="0 0 10 0"
                        Click="BtnCancel_Click"/>
                <Button Content="Сохранить" 
                        Width="80"
                        Background="#4CAF50"
                        Foreground="White"
                        Click="BtnSave_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>